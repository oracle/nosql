<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
<id>cloudsim</id>
<formats>
  <format>tar.gz</format>
  <format>zip</format>
</formats>
<baseDirectory>oracle-nosql-cloud-simulator-${project.version}</baseDirectory>
<includeBaseDirectory>true</includeBaseDirectory>
<fileSets>
  <fileSet>
    <directory>${project.basedir}</directory>
    <includes>
      <include>CHANGELOG.md</include>
      <include>LICENSE.txt</include>
      <include>README.md</include>
      <include>THIRD_PARTY_LICENSES.txt</include>
      <include>logging.properties</include>
      <include>runCloudSim</include>
    </includes>
    <outputDirectory>/</outputDirectory>
  </fileSet>
</fileSets>
<files>
  <file>
    <source>${project.build.directory}/${project.build.finalName}.jar</source>
    <outputDirectory>/cloudsim/lib</outputDirectory>
    <destName>cloudsim.jar</destName>
  </file>
</files>
</assembly>
